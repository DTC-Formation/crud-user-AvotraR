<div {{ attributes }} data-action="change->live#update" data-poll>
    {% for message in app.flashes('success') %}
    <div id="message" class="bg-success">
        <i class="fas fa-tools"></i>
        {{message}}
    </div>
    {% endfor %}
    {% for message in app.flashes('edit') %}
    <div id="message" class="bg-warning">
        {{message}}
    </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
    <div id="message" class="bg-danger">
        {{message}}
    </div>
    {% endfor %}
</div>